<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HistoryAR" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/secondary_light</item>
        <item name="colorOnPrimary">@color/secondary_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/nav_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/PlusJakartaSansTextViewStyle</item>
    </style>

    <style name="PlusJakartaSansTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/plus_jakarta_sans</item>
    </style>

    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/btn_text</item>
        <item name="android:drawableTint">@color/btn_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="fontFamily">@font/plus_jakarta_sans</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="bg_image">
        <item name="tint">@color/primary</item>
        <item name="tintMode">multiply</item>
    </style>

    <style name="title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text</item>
        <item name="fontFamily">@font/plus_jakarta_sans</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="subtitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text</item>
        <item name="fontFamily">@font/plus_jakarta_sans</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ivAccountImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="minitour_title" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="fontFamily">@font/plus_jakarta_sans</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="minitour_subtitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="fontFamily">@font/plus_jakarta_sans</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="bigtour_info" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="fontFamily">@font/plus_jakarta_sans</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="minipoint_name" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="fontFamily">@font/plus_jakarta_sans</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tourdetail_description" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="fontFamily">@font/plus_jakarta_sans</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="comment_name" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/plus_jakarta_sans</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="comment_description" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="fontFamily">@font/plus_jakarta_sans</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="comment_calification" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:drawableTint">@color/primary</item>
        <item name="fontFamily">@font/plus_jakarta_sans</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>