<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HistoryAR" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/secondary_light</item>
        <item name="colorOnPrimary">@color/secondary_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/nav_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/PlusJakartaSansTextViewStyle</item>
    </style>

    <style name="PlusJakartaSansTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/plus_jakarta_sans</item>
    </style>

    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/btn_text</item>
        <item name="android:drawableTint">@color/btn_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="fontFamily">@font/plus_jakarta_sans</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="bg_image">
        <item name="tint">@color/primary</item>
        <item name="tintMode">multiply</item>
    </style>

</resources>